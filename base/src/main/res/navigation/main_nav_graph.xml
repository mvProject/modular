<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/login_flow">

    <include app:graph="@navigation/login_flow" />

    <include app:graph="@navigation/second_app_flow" />

    <include app:graph="@navigation/first_app_flow" />

    <action
        android:id="@+id/action_global_first_app_flow"
        app:destination="@id/first_app_flow"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popUpTo="@id/main_nav_graph" />

    <action
        android:id="@+id/action_global_second_app_flow"
        app:destination="@id/second_app_flow"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popUpTo="@id/main_nav_graph"/>

    <action
        android:id="@+id/action_global_login_flow"
        app:destination="@id/login_flow"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popUpTo="@id/main_nav_graph"/>

</navigation>